<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:JumpAPP.Controls"
             x:Class="JumpAPP.Views.CompanyFilterPage">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="8.8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <StackLayout Orientation="Horizontal"  Grid.Row="0" BackgroundColor="#A1C51E">

                <StackLayout Grid.Row="0"  BackgroundColor="#A1C51E" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Image Source="back"  HeightRequest="35" WidthRequest="25" Grid.Row="0"  Margin="20,0,0,0"  VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" >

                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BackTap}" NumberOfTapsRequired="1"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
                <StackLayout Grid.Row="0" BackgroundColor="#A1C51E" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Label Text="Contact Details"  TextColor="White" VerticalOptions="CenterAndExpand" Grid.Row="0" HorizontalOptions="CenterAndExpand" FontSize="20" FontAttributes="Bold"/>
                </StackLayout>
                <StackLayout Grid.Row="0" BackgroundColor="#A1C51E" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Label Text="Reset" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" Margin="0,0,15,0" FontSize="13" TextColor="White"></Label>
                </StackLayout>
            </StackLayout>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <ScrollView Grid.Column="0" >
                    <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  BackgroundColor="LightGray" Grid.Column="0">

                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Company Name"  TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding CompanyName}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>

                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Company Code" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding CompanyCode}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>


                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="City" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding City}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>


                        <StackLayout Margin="0,20,0,0">
                            <Label Text="Type" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Type}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>

                        <StackLayout Margin="0,20,0,0">
                            <Label Text="Vat Number" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding VATNumber}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>


                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Email"  TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding email}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>

                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Telephone" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Telephone}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>
                        
                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Marketing Manger" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Marketing}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>
                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Techincal Manger" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Technical}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>


                        <StackLayout  Margin="0,20,0,0">
                            <Label Text="Sales Manger" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Sales}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>


                        <StackLayout Margin="0,20,0,0">
                            <Label Text="Supervisor" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Supervisor}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>

                        <StackLayout Margin="0,20,0,0">
                            <Label Text="Aliasr" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Alias}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>

                        <StackLayout Margin="0,20,0,0">
                            <Label Text="Tax Code" TextColor="Black" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TaxCode}" NumberOfTapsRequired="1"/>
                                </Label.GestureRecognizers>
                            </Label>

                        </StackLayout>
                    </StackLayout>


                </ScrollView>
               


                <!--<ListView BackgroundColor="LightGray" Grid.Column="0" VerticalScrollBarVisibility="Never" SeparatorVisibility="None" SelectedItem="{Binding SelectedFilterContent}" ItemsSource="{Binding ItemFilterContent}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HasUnevenRows="True" Margin="0,0,0,0" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>

                                <Grid BackgroundColor="LightGray">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="Auto"/>

                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{Binding Surname}" TextColor="Black" FontSize="14" Grid.Row="1" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="Start"></Label>
                                    </Grid>
                               
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->
                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Commpany Name"  IsVisible="{Binding companyname}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />

                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Commpany Code"  IsVisible="{Binding CompCode}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />


                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter City"  IsVisible="{Binding city}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />



                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Type"  IsVisible="{Binding type}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />



                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Vat Number" IsVisible="{Binding Vat}"  
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />


                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Email" IsVisible="{Binding Email}"  
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />



                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Telephone"  IsVisible="{Binding Telphone}"
                             PlaceholderColor="Gray"  
