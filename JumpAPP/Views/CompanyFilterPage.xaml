                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Marketing Manger" IsVisible="{Binding marketing}"  
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />




                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Techincal Manger" IsVisible="{Binding Tech}"  
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />





                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Sales Manger" IsVisible="{Binding sales}"  
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />



                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Supervisor"  IsVisible="{Binding supervisor}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />




                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
                             Placeholder="Enter Alias"  IsVisible="{Binding alias}"
                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />




                <custom:CustomEntry  
                             CornerRadius="15"  
                             IsCurvedCornersEnabled="True"  
                             BorderColor="YellowGreen"      
                             HorizontalTextAlignment="Start"  
                             FontSize="14"  
                             HeightRequest="50"  
                    Margin="0,15,0,0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"
