                             PlaceholderColor="Gray"  
                    Text="{Binding SelectedFilterContent}"
                             TextColor="Black"  
                             FontAttributes="None"  
                            />





            </Grid >
            <Grid Grid.Row="2" ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" VerticalOptions="CenterAndExpand" Command="{Binding Apply}"  BorderColor="#A1C51E" CornerRadius="7" HorizontalOptions="EndAndExpand" Text="APPLY" BackgroundColor="#A1C51E" TextColor="White" WidthRequest="130" HeightRequest="50"/>
                <Button Grid.Column="1" VerticalOptions="CenterAndExpand" Command="{Binding Cancel}" BorderColor="#A1C51E" CornerRadius="7" HorizontalOptions="StartAndExpand" Text="CANCEL" BackgroundColor="White" TextColor="Black" WidthRequest="130" HeightRequest="50"></Button>

            </Grid>
        </Grid>
    </ContentPage.Content>
